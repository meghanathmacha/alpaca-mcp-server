# This is an example of a .env file
# Alpaca API credentials
# Get these from https://app.alpaca.markets/paper/dashboard/overview
# Please change the following to your own PAPER api key and secret
ALPACA_API_KEY = "your_alpaca_api_key_for_paper_account"
ALPACA_SECRET_KEY = "your_alpaca_secret_key_for_paper_account"
PAPER = True # True for paper trading, False for live trading

# Optional Alpaca API URL overrides
TRADE_API_URL = None
TRADE_API_WSS = None
DATA_API_URL = None
STREAM_DATA_WSS = None

# Risk Management Configuration
MAX_DAILY_LOSS = 500.0          # Maximum daily loss in dollars
PORTFOLIO_DELTA_CAP = 50.0      # Maximum absolute portfolio delta
CONFIRMATION_TIMEOUT = 30       # Trade confirmation timeout in seconds

# 0DTE Trading Configuration
SPY_CHAIN_UPDATE_INTERVAL = 2   # Option chain update interval in seconds
AUTO_EXPIRE_TIME = "16:15"      # Auto-expire time for 0DTE data (4:15 PM ET)
CACHE_CLEANUP_INTERVAL = 300    # Cache cleanup interval in seconds

# Monitoring and Alerts (Optional)
PROMETHEUS_PORT = 9090
S3_AUDIT_BUCKET = None
PAGERDUTY_API_KEY = None